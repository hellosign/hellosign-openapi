#!/usr/bin/env bash

# Warning: You should run this from rootless Docker (or Podman, or other)

set -e

DIR=$(cd `dirname $0` && pwd)
ROOT_DIR="${DIR}/.."
WORKING_DIR="/app/php"

docker run --rm \
  -v "${ROOT_DIR}:${WORKING_DIR}" \
  -v "dropbox-sign-sdk-composer-cache:/.composer" \
  -w "${WORKING_DIR}" \
  -u root:root \
  -e PHP.display_errors=1 \
  -e PHP.error_reporting=-1 \
  jtreminio/php:8.1 "$@"

  exit 0
