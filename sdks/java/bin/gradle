#!/usr/bin/env bash

# You probably want to run ./bin/gradle ./gradlew clean build

set -e

DIR=$(cd `dirname $0` && pwd)
ROOT_DIR="${DIR}/.."
WORKING_DIR="/app/java"

docker run --rm \
  -v "${ROOT_DIR}:${WORKING_DIR}" \
  -v "dropbox-sign-sdk-maven-cache:/root/.m2" \
  -w "${WORKING_DIR}" \
  -e GEN_DIR=/app \
  gradle:6.9.3-jdk8 "$@"
