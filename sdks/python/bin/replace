#!/usr/bin/env bash

set -e

DIR=$(cd `dirname $0` && pwd)
ROOT_DIR="${DIR}/.."

rep () {
  SEARCH_STRING=$1
  REPLACE_STRING=$2
  SCAN_DIRS=( \
    "docs" \
    "dropbox_sign/models" \
  )

  printf "\nScanning for '${SEARCH_STRING}': "

  set +e
  for i in "${SCAN_DIRS[@]}"
  do
    perl -pi -e "s/${SEARCH_STRING}/${REPLACE_STRING}/g" \
      "${ROOT_DIR}/${i}/"*.*
  done
}

rep 'Union\[StrictBytes, StrictStr\]' 'Union[StrictBytes, StrictStr, io.IOBase]'

printf "\n"
